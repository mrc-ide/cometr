{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "id": "Countries",
    "type": "array",
    "items": {
        "type": "object",
        "properties": {
            "code": {
                "type": "string"
            },
            "name": {
                "type": "string"
            },
            "population": {
                "type": "integer"
            },
            "date": {
                "type": "string",
                "pattern": "^[0-9]{4}-[0-9]{2}-[0-9]{2}$"
            },
            "public": {
                "type": "boolean"
            }
        },
        "additionalProperties": false,
        "required": ["code", "name", "date"]
    }
}
